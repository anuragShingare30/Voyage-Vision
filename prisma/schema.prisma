generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Tour {
  id Int @id @default(autoincrement())
  city String
  country String
  title String
  Description String @db.Text
  image String? @db.Text
  stop Json
  @@unique([city,country])
}
